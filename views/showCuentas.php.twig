{% extends "plantillaBase.php.twig" %}

{% block head %}
    <!--Fabio Benitez Ramirez-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

        {% endblock %}

    {% block titulo %} <h1>Listado de Cuentas</h1> {% endblock %}

    {% block contenido %}


        <table id="myTable" class="table table-sm">
        <thead >
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nombre</th>
                <th scope="col">Apellidos</th>
                <th scope="col">Email</th>
                <th scope="col">Fecha Nacimiento</th>
                <th scope="col">Tipo</th>
                <th scope="col">Hacer Admin</th>
                <th scope="col">Eliminar</th>
            </tr>
        </thead>
        {% for item in dat %}

            <tr class="text-white bg-dark">
                <th scope="row">{{item.idUsu}}</th>
                <td>{{item.nombre}}</td>
                <td>{{item.Apellidos}}</td>
                <td>{{item.email}}</td>
                <td>{{item.Fecha}}</td>
                <td>{{item.Tipo}}</td>
                {% if item.Tipo == "Admin" %}
                    <td>
                        <span class="glyphicon glyphicon-ok"></span>
                    </td>
                {%else%}
                    <td><a href="index.php?con=Usuario&ope=hacerAdmin&id={{item.IdUsu}}">
                            <span class="glyphicon glyphicon-ok"></span>
                        </a></td>
                    {%endif%}

                <td> <a   href="index.php?con=Usuario&ope=borrar&id={{item.IdUsu}}">
                        <span class="glyphicon glyphicon-remove"></span>
                    </a></td>
            </tr>
        {%endfor%}
    </table>



{% endblock %}

{%block script1 %}
